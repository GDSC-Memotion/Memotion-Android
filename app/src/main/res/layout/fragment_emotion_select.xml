<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.diary.dialog.FragmentEmotionSelect">

    <data>

        <variable
            name="data"
            type="konkuk.gdsc.memotion.ui.diary.dialog.EmotionViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/ll_emotion_select_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80555555"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:outlineSpotShadowColor="@android:color/transparent"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Select your feeling"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/rg_emotion_select_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checkedButton="@={data.currentId}"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_emotion_1"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:checked="true"
                            android:drawableTop="@drawable/selector_anger"
                            android:text="@string/emotion_angry"
                            android:textAlignment="center"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <RadioButton
                            android:id="@+id/rb_emotion_2"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:checked="false"
                            android:drawableTop="@drawable/icon_emotion_disgust_full"
                            android:text="@string/emotion_disgust"
                            android:textAlignment="center"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <RadioButton
                            android:id="@+id/rb_emotion_3"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:checked="false"
                            android:drawableTop="@drawable/icon_emotion_fear_full"
                            android:text="@string/emotion_fear"
                            android:textAlignment="center"
                            android:textSize="16sp" />

                    </RadioGroup>

                    <RadioGroup
                        android:id="@+id/rg_emotion_select_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:checkedButton="@={data.currentId}"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_emotion_4"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:checked="false"
                            android:drawableTop="@drawable/icon_emotion_joy_full"
                            android:text="@string/emotion_joy"
                            android:textAlignment="center"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <RadioButton
                            android:id="@+id/rb_emotion_5"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:checked="false"
                            android:drawableTop="@drawable/icon_emotion_neutral_full"
                            android:text="@string/emotion_neutral"
                            android:textAlignment="center"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <RadioButton
                            android:id="@+id/rb_emotion_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:checked="false"
                            android:drawableTop="@drawable/icon_emotion_sadness_full"
                            android:text="@string/emotion_sadness"
                            android:textAlignment="center"
                            android:textSize="16sp" />

                    </RadioGroup>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_emotion_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:checked="false"
                            android:drawableTop="@drawable/icon_emotion_surprise_full"
                            android:text="@string/emotion_surprise"
                            android:textAlignment="center"
                            android:textSize="16sp" />

                    </RadioGroup>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_emotion_select"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginBottom="15dp"
                    android:backgroundTint="#5375FC"
                    android:text="Select"
                    android:textSize="16sp"
                    app:cornerRadius="10dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>