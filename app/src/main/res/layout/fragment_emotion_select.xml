<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80555555"
    android:gravity="center"
    tools:context=".ui.diary.dialog.FragmentEmotionCheck">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="@android:color/transparent"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Select your feeling"
                android:textSize="20sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_emotion_1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/selector_anger"
                        android:button="@null"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/rb_emotion_2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/selector_anger"
                        android:button="@null" />

                    <RadioButton
                        android:id="@+id/rb_emotion_3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/selector_anger"
                        android:button="@null" />

                </RadioGroup>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_emotion_text_1"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:checked="true"
                        android:text="anger"
                        android:textAlignment="center" />
                    <!--android:textColor="@drawable/selector_radio_text"-->

                    <RadioButton
                        android:id="@+id/rb_emotion_text_2"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:text="anger"
                        android:textAlignment="center" />

                    <RadioButton
                        android:id="@+id/rb_emotion_text_3"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:text="anger"
                        android:textAlignment="center" />

                </RadioGroup>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_emotion_4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/selector_anger"
                        android:button="@null" />

                    <RadioButton
                        android:id="@+id/rb_emotion_5"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/selector_anger"
                        android:button="@null" />

                    <RadioButton
                        android:id="@+id/rb_emotion_6"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/selector_anger"
                        android:button="@null" />

                </RadioGroup>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_emotion_text_4"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:text="anger"
                        android:textAlignment="center" />
                    <!--android:textColor="@drawable/selector_radio_text"-->

                    <RadioButton
                        android:id="@+id/rb_emotion_text_5"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:text="anger"
                        android:textAlignment="center" />

                    <RadioButton
                        android:id="@+id/rb_emotion_text_6"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:text="anger"
                        android:textAlignment="center" />

                </RadioGroup>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_emotion_7"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/selector_anger"
                        android:button="@null" />

                </RadioGroup>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_emotion_text_7"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:text="anger"
                        android:textAlignment="center" />
                    <!--android:textColor="@drawable/selector_radio_text"-->

                </RadioGroup>

            </RadioGroup>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="22dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#C1C1C1"
                android:text="Select"
                android:textSize="16sp"
                app:cornerRadius="10dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>